<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Fusion Ray Tracer" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Name="_Image" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top" SnapsToDevicePixels="True"></Image>
        <StackPanel Grid.Column="1">
            <Button Margin="3" Name="_RenderButton">Render</Button>
            <TextBox Name="_DpiTextBox"></TextBox>
        </StackPanel>
    </Grid>
</Window>
