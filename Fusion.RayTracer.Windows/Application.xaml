<Application x:Class="Application"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:own="clr-namespace:Fusion.RayTracer.Windows"
ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <Style x:Key="DefaultControlStyle">
            <Setter Property="Control.Margin" Value="3" />
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource DefaultControlStyle}"></Style>
        <Style TargetType="Label" BasedOn="{StaticResource DefaultControlStyle}"></Style>
        <Style TargetType="RadioButton" BasedOn="{StaticResource DefaultControlStyle}"></Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource DefaultControlStyle}"></Style>
        <Style TargetType="ProgressBar" BasedOn="{StaticResource DefaultControlStyle}"></Style>
        <Style TargetType="ScrollViewer" BasedOn="{StaticResource DefaultControlStyle}"></Style>
        <Style TargetType="GroupBox" BasedOn="{StaticResource DefaultControlStyle}"></Style>
        
    </Application.Resources>
</Application>
